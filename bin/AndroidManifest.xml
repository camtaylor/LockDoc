        <activity
            android:name=".ActionOptionsActivity"
            android:label="@string/title_activity_action_options" >
        </activity>
        <activity
            android:name=".UploadActivity"
            android:label="@string/title_activity_capture" >
        </activity>
        <activity
            android:name=".CreateAccountActivity"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name=".DocInfoActivity"
            android:label="@string/title_activity_doc_info" >
        </activity>
        <activity
            android:name=".DocPreviewActivity"
            android:label="@string/title_activity_doc_preview" >
        </activity>
        <activity
            android:name=".TestDatabaseActivity"
            android:label="@string/title_activity_test_database" >
